         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>Authoriation</servlet-name>
        <servlet-class>com.wordpress.ilyaps.servlets.AuthorizationServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Authoriation</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
</web-app>